block content
  .content-wrapper
    .card.card-primary
      .card-header
        h3.card-title Add Task
      form.card-body(action=`/tasks/update/${task._id}/edit?_method=put` method='POST')
        .form-group(data-select2-id='109').col-lg-10
          label Status
          select.form-control.select2bs4.select2-hidden-accessible(style='width: 100%;' data-select2-id='25' tabindex='-1' aria-hidden='true' name='status')
            case task.status
              when '0'
                option(data-select2-id='112' value='0') New
                option(data-select2-id='113' value='1') In progress
                option(data-select2-id='114' value='2') Resolved
                option(data-select2-id='115' value='3') Finish
              when '1'
                option(data-select2-id='113' value='1') In progress
                option(data-select2-id='112' value='0') New
                option(data-select2-id='114' value='2') Resolved
                option(data-select2-id='115' value='3') Finish 
              when '2'
                option(data-select2-id='114' value='2') Resolved
                option(data-select2-id='112' value='0') New
                option(data-select2-id='113' value='1') In progress
                option(data-select2-id='115' value='3') Finish 
              when '3'
                option(data-select2-id='115' value='3') Finish     
                option(data-select2-id='112' value='0') New
                option(data-select2-id='113' value='1') In progress
                option(data-select2-id='114' value='2') Resolved
        .form-group.col-lg-10
          label Name Task
          input.form-control(type='text' placeholder='Enter ...' value= task.name name='name')  
        .form-group.col-lg-10
          label Description
          textarea.form-control(rows='5' placeholder='Enter ...' name='description')= task.description
        .form-group
